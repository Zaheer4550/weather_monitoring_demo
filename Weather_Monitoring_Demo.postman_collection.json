	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"packages": {},
				"exec": [
					"let row = pm.iterationData.toObject();\r",
					"let apiType = row.api_type;\r",
					"\r",
					"if (apiType === \"current\") {\r",
					"    pm.environment.set(\"api_url\", `https://api.open-meteo.com/v1/forecast?latitude=${row.latitude}&longitude=${row.longitude}&current_weather=true`);\r",
					"}\r",
					"else if (apiType === \"forecast\") {\r",
					"    pm.environment.set(\"api_url\", `https://api.open-meteo.com/v1/forecast?latitude=${row.latitude}&longitude=${row.longitude}&daily=temperature_2m_max,temperature_2m_min&timezone=${row.timezone}`);\r",
					"}\r",
					"else if (apiType === \"historical\") {\r",
					"    pm.environment.set(\"api_url\", `https://archive-api.open-meteo.com/v1/archive?latitude=${row.latitude}&longitude=${row.longitude}&start_date=${row.start_date}&end_date=${row.end_date}&daily=temperature_2m_max,temperature_2m_min&timezone=auto`);\r",
					"}\r",
					""
				]
			}
		},
